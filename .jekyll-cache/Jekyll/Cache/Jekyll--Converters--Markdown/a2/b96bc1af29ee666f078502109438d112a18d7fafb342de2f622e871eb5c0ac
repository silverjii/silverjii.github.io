<span class="c1">// arrow function, ê°„ê²°í•˜ê²Œ</span>
<span class="kd">const</span> <span class="nx">simplePrint</span> <span class="o">=</span> <span class="p">()</span> <span class="o">=&gt;</span> <span class="nx">console</span><span class="p">.</span><span class="nx">log</span><span class="p">(</span><span class="dl">'</span><span class="s1">simplePrint!</span><span class="dl">'</span><span class="p">);</span>

